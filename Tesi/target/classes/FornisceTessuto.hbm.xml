<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="it.dei.unipd.FornisceTessuto" table="FORNISCE_TESSUTO">

		<composite-id name="idFornisceTessuto" class="it.dei.unipd.FornisceTessutoId">
			<key-property name="cliente" column="cliente" />
			<key-property name="tessuto" column="tessuto" />
		</composite-id>

		<many-to-one name="cliente" class="it.dei.unipd.Cliente"
			insert="false" update="false">
			<column name="cliente" precision="15" scale="0" />
		</many-to-one>
		<many-to-one name="tessuto" class="it.dei.unipd.Tessuto"
			insert="false" update="false">
			<column name="codice_tessuto" />
			<column name="colore_tessuto" />
		</many-to-one>

	</class>
</hibernate-mapping>